{
  "name": "graphiql-app",
  "version": "1.0.0",
  "description": "Final task on React.js course",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky install",
    "format:fix": "prettier --write ./src --config ./.prettierrc",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:dev": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SlavaPankov/GraphiQL-App.git"
  },
  "bugs": {
    "url": "https://github.com/SlavaPankov/GraphiQL-App/issues"
  },
  "homepage": "https://github.com/SlavaPankov/GraphiQL-App#readme",
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "@types/react-redux": "^7.1.31",
    "classnames": "^2.3.2",
    "firebase": "^10.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.0",
    "react-router-dom": "^6.20.1",
    "redux": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.0",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "msw": "^2.0.10",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*": "prettier -luw",
    "*.{ts,tsx}": "tsc && eslint --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0 --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "msw": {
    "workerDirectory": "src\\__tests__\\cfg"
  }
}
